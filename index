import React, { useEffect, useMemo, useRef, useState } from "react";

/**
 * TALENT ROOM â€” CRO Landing (Czech)
 * Full rewrite to sandbox all names and stop duplicate-var collisions like
 * "Can't create duplicate variable: '_0x2bcb81'".
 *
 * How it avoids collisions:
 * - Everything (constants, helpers, components) lives inside an IIFE closure
 *   that returns the App component; at top-level we only have the import and
 *   a single `export default (...)` expression. No global `var/let/const`.
 * - No global <style> tags or CSS keyframes that some bundlers obfuscate.
 * - JSX strictly paired/closed; no stray tags.
 * - Small runtime "tests" via console.assert after mount to sanity-check DOM.
 */

const TR_App = (() => {
  // ---------------- Settings & Colors (scoped in closure) ----------------
