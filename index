  // ---------------- Helpers ----------------
  function useCountdown(targetISO) {
    const target = useMemo(() => new Date(targetISO).getTime(), [targetISO]);
    const [timeLeft, setTimeLeft] = useState(() => Math.max(0, target - Date.now()));
    useEffect(() => {
      const id = setInterval(() => setTimeLeft(Math.max(0, target - Date.now())), 1000);
      return () => clearInterval(id);
    }, [target]);
    const s = Math.floor(timeLeft / 1000);
    const d = Math.floor(s / 86400);
    const h = Math.floor((s % 86400) / 3600);
    const m = Math.floor((s % 3600) / 60);
    const sec = s % 60;
    return { d, h, m, sec, finished: s <= 0 };
  }

  function ImageSlot({ src, label }) {
    return (
      <div
        className="aspect-[16/9] w-full rounded-xl overflow-hidden bg-white/5 flex items-center justify-center text-white/70"
        style={{ boxShadow: "inset 0 0 0 1px rgba(255,255,255,0.08)" }}
      >
        {src ? (
          <img
            src={src}
            alt={label}
            loading="lazy"
            decoding="async"
            width={1600}
            height={900}
            className="w-full h-full object-cover"
          />
        ) : (
          <span className="text-sm">{label} â€“ sem pÅ™ijde fotka</span>
        )}
      </div>
    );
  }

  // ---------------- JS-driven marquee (no CSS @keyframes) ----------------
  const CAROUSEL_ITEMS = [
    "ğŸ›¡ï¸ 30 dnÃ­. BuÄ to milujeÅ¡, nebo vracÃ­me cash.",
