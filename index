    "ğŸ“… RezervaÄnÃ­ systÃ©m: studio ready, kdy chceÅ¡ ty.",
    "ğŸ† Contesty o festivaly a real vystoupenÃ­.",
  ];

  function Marquee({ items = CAROUSEL_ITEMS }) {
    const wrapRef = useRef(null);
    const innerRef = useRef(null);

    useEffect(() => {
      const wrap = wrapRef.current;
      const inner = innerRef.current;
      if (!wrap || !inner) return;

      let rafId = 0;
      let x = 0;
      const step = () => {
        x -= 1.4; // faster scroll (px per frame, was 0.5)
        if (inner.scrollWidth > 0) {
          if (-x >= inner.scrollWidth / 2) x = 0;
        }
        inner.style.transform = `translateX(${x}px)`;
        rafId = requestAnimationFrame(step);
      };
      rafId = requestAnimationFrame(step);
      return () => cancelAnimationFrame(rafId);
    }, [items]);

    const text = items.join("   â€¢   ");
    return (
      <div
        className="mt-7 w-full max-w-4xl mx-auto rounded-2xl border px-0 py-0 overflow-hidden"
        style={{
          borderColor: COLORS.neonGold,
          boxShadow: "0 0 22px rgba(255,215,0,0.35)",
          background: "#0b0b0b",
        }}
        role="region"
        aria-label="informativnÃ­ karusel"
      >
        <div className="relative h-9 md:h-10 overflow-hidden" ref={wrapRef}>
          <div
            className="pointer-events-none absolute inset-y-0 left-0 w-10"
            style={{ background: "linear-gradient(90deg, #0b0b0b, rgba(11,11,11,0))" }}
          />
          <div
            className="pointer-events-none absolute inset-y-0 right-0 w-10"
            style={{ background: "linear-gradient(270deg, #0b0b0b, rgba(11,11,11,0))" }}
          />
          <div
            ref={innerRef}
            className="whitespace-nowrap font-semibold text-white text-sm md:text-base leading-9 md:leading-10 will-change-transform"
            style={{ display: "inline-block", paddingLeft: "100%" }}
            aria-live="off"
          >
            <span className="inline-block pr-12">{text}</span>
            <span className="inline-block pr-12">{text}</span>
          </div>
        </div>
      </div>
    );
  }

  // ---------------- Partners scroller (JS) ----------------
  function LogosScroller() {
    const wrapRef = useRef(null);
    const innerRef = useRef(null);

    useEffect(() => {
      const wrap = wrapRef.current;
      const inner = innerRef.current;
      if (!wrap || !inner) return;
      let rafId = 0;
      let x = 0;
      const step = () => {
        x -= 1.2;
        if (inner.scrollWidth > 0) {
          if (-x >= inner.scrollWidth / 2) x = 0;
        }
        inner.style.transform = `translateX(${x}px)`;
        rafId = requestAnimationFrame(step);
      };
      rafId = requestAnimationFrame(step);
      return () => cancelAnimationFrame(rafId);
    }, []);

    const logos = Array.from({ length: 8 }).map((_, idx) => (
      <span
        key={`logo-${idx}`}
        className="inline-flex items-center justify-center mx-8 w-28 h-12 bg-white/5 rounded-md text-white/70 text-xs"
      >
        Logo {idx + 1}
      </span>
    ));

    return (
      <div className="mt-4 relative overflow-hidden rounded-2xl border" style={{ borderColor: "#ffffff22" }}>
        <div ref={wrapRef} className="overflow-hidden">
          <div ref={innerRef} className="whitespace-nowrap py-4 will-change-transform">
            {logos}
            {logos}
          </div>
        </div>
      </div>
    );
  }

  // ---------------- Glow utilities (interactive neon glow following cursor) ----------------
  function hexToRgbA(hex, alpha = 0.6) {
    if (!hex) return `rgba(255,255,255,${alpha})`;
    const h = (hex || "").replace("#", "");
    const bigint = parseInt(h, 16);
    const r = (bigint >> 16) & 255;
    const g = (bigint >> 8) & 255;
    const b = bigint & 255;
    return `rgba(${r}, ${g}, ${b}, ${alpha})`;
    }

  function GlowCard({ color = COLORS.neonGold, children }) {
    const ref = useRef(null);
    const [glow, setGlow] = useState({ x: 0, y: 0, show: false });

    const onMove = (e) => {
      const el = ref.current;
      if (!el) return;
      const rect = el.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      setGlow({ x, y, show: true });
    };
    const onLeave = () => setGlow((g) => ({ ...g, show: false }));

    const glowBg = `radial-gradient(200px 200px at ${glow.x}px ${glow.y}px, ${hexToRgbA(
      color,
      0.35
    )}, transparent 60%)`;

    return (
      <div
        ref={ref}
        onMouseMove={onMove}
        onMouseEnter={() => setGlow((g) => ({ ...g, show: true }))}
        onMouseLeave={onLeave}
        className="relative rounded-2xl"
        style={{
          boxShadow: glow.show
            ? `0 0 28px ${hexToRgbA(color, 0.55)}`
            : "0 0 14px rgba(255,255,255,0.06)",
          transition: "box-shadow 160ms ease",
        }}
      >
        {/* dynamic glow layer */}
        <div
          aria-hidden
          className="pointer-events-none absolute inset-0 rounded-2xl"
          style={{
            background: glow.show ? glowBg : "transparent",
            mixBlendMode: "screen",
            transition: "background 120ms ease",
          }}
        />
        {/* content */}
        <div className="relative rounded-2xl overflow-hidden">{children}</div>
      </div>
    );
  }

